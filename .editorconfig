root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.gradle]
indent_style = tab

[*.{kt,kts}]
indent_style = tab
ij_kotlin_blank_lines_after_class_header = 1

[*.properties]
indent_style = space
indent_size = 2